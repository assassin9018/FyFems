<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uc="clr-namespace:MyFemsWpfClient.Controls">
    <DataTemplate x:Key="DialogsItemTemplate">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <uc:UserIconControl Grid.Column="0" Margin="5" Width="40" Height="40"/>
                <TextBlock Grid.Column="1" x:Name="DialogName" MaxHeight="15" LineHeight="15" Margin="5" MaxWidth="80" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Grid.Column="1" x:Name="LastMessage" MaxHeight="15" LineHeight="15" Margin="5" MaxWidth="120" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                <TextBlock Grid.Column="1" x:Name="LastMessageTime" MaxHeight="15" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                <TextBlock Grid.Column="1" x:Name="MessagesCount" MaxHeight="15" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>